SHELL= /bin/sh
 
FC = /opt/solarisstudio12.4/bin/f90

RM= /bin/rm

DOUBLE = -xtypemap=real:64,double:64 -m64

SRC = ./

OPENMP = -openmp

#------------------------------------------------------------------------------
# Debugging, verbose, additional nuggets 
#------------------------------------------------------------------------------
VFLAGS= -w3 -C -g  

#------------------------------------------------------------------------------
# FFTW3
#------------------------------------------------------------------------------
FFTW3 = -lfftw3

#------------------------------------------------------------------------------
# Optimization flags
#------------------------------------------------------------------------------
FAST= -fast -O4

#------------------------------------------------------------------------------
# Compile macros 
#------------------------------------------------------------------------------
FFLAGS= $(DOUBLE) $(FAST) $(OPENMP)

TESS= number_generators.f90 Tesseract.f90
 
tess:	$(TESS)
	$(FC) $(FFLAGS) $(FFTW3) $(TESS) -o $@